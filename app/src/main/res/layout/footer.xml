<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginEnd="@dimen/default_padding"
    android:layout_marginStart="@dimen/default_padding"
    android:layout_marginTop="@dimen/top_padding"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/made_with"
        android:textColor="?attr/defaultTextColor"
        android:textSize="@dimen/search_bar_text_size" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:tint="@color/heartRed"
        app:lottie_autoPlay="true"
        app:lottie_fileName="animations/heart.json"
        app:lottie_loop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="@string/by_3rd_year_cse"
        android:textColor="?attr/defaultTextColor"
        android:textSize="@dimen/search_bar_text_size" />

</LinearLayout>